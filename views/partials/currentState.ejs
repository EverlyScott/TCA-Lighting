<script>
  const ws = new WebSocket(`ws://${location.host}`);

  ws.addEventListener("message", (evt) => {
    const message = JSON.parse(evt.data);

    const elem = document.getElementById("current-state-color");

    if (message.op === "light-change") {
      elem.innerHTML = "";
      elem.style.backgroundColor = `rgb(${message.data[0]}, ${message.data[1]}, ${message.data[2]})`;
    }
  });
</script>
<div id="current-state-color" style="width: 100%; height: 100%; background-color: rgb(0, 0, 0); color: #ffffff">
  Loading...
</div>
